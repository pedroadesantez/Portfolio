# Security Configuration
# Copy this file to .env.local and configure your security settings

# Content Security Policy Configuration
NEXT_PUBLIC_CSP_REPORT_URI=
NEXT_PUBLIC_CSP_REPORT_ONLY=false

# Rate Limiting Configuration
NEXT_PUBLIC_RATE_LIMIT_ENABLED=true
NEXT_PUBLIC_RATE_LIMIT_CONTACT_FORM_WINDOW_MS=900000
NEXT_PUBLIC_RATE_LIMIT_CONTACT_FORM_MAX_ATTEMPTS=3

# Security Headers Configuration
NEXT_PUBLIC_SECURITY_HEADERS_ENABLED=true
NEXT_PUBLIC_HSTS_MAX_AGE=63072000
NEXT_PUBLIC_HSTS_INCLUDE_SUBDOMAINS=true
NEXT_PUBLIC_HSTS_PRELOAD=true

# HTTPS Enforcement
NEXT_PUBLIC_FORCE_HTTPS=true
NEXT_PUBLIC_SECURE_COOKIES=true

# Email Security Configuration
NEXT_PUBLIC_EMAIL_SERVICE_ENABLED=false
NEXT_PUBLIC_EMAIL_SERVICE_PROVIDER=
EMAIL_SERVICE_API_KEY=
EMAIL_SERVICE_TEMPLATE_ID=

# Bot Protection
NEXT_PUBLIC_BOT_PROTECTION_ENABLED=true
NEXT_PUBLIC_HONEYPOT_ENABLED=true

# Security Monitoring
NEXT_PUBLIC_SECURITY_MONITORING_ENABLED=false
SECURITY_MONITORING_WEBHOOK_URL=
SECURITY_MONITORING_API_KEY=

# Development Security (disable in production)
NEXT_PUBLIC_SECURITY_DEBUG=false
NEXT_PUBLIC_SECURITY_BYPASS_HTTPS=false

# Allowed Origins (comma-separated)
NEXT_PUBLIC_ALLOWED_ORIGINS=https://localhost:3000,https://yourdomain.com

# Security Token Salt (generate a random string)
SECURITY_TOKEN_SALT=your-random-salt-here-change-this-in-production